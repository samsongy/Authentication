<%- include("partials/header"); %>


<h1 class="page-title">Lift Buddy</h1>
<% if(messages.error) { %>
    <%= messages.error%>
<% } %>
<div class="login-form">
    <div class="form-title">Log Into Lift Buddy</div>
    <form class="login-form-body" action="/login" method="POST">
        <div class="form-group login-form-item">
            <input class="form-control form-control-lg" type="text" name="username" placeholder="Username or Email " autocomplete="off" required>
        </div>
        <div class="form-group login-form-item">
            <input class="form-control form-control-lg" type="password" name="password" placeholder="Password " autocomplete="off" required>
        </div>
        <div class="login-footer">
            <button class="btn btn-secondary btn-lg submit-btn" type="submit">Log In</button>
            <a class="nav-btn login-nav-btn" href="/signup">Sign Up</a>
        </div>
    </form>
</div>

<%- include("partials/footer"); %>
